/* pages/newReminder/index.wxss */
.new-reminder {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.new-reminder .container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: scroll;
}

.container .tip-wrap {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  width: 100%;
  height: 80rpx;
  background-color: var(--background-color);
  box-shadow: 0 2rpx 4rpx 0 var(--n150), 0 -2rpx 4rpx 0 var(--n150);
}

.tip-wrap image {
  width: 90rpx;
  height: 100%;
}

.tip-wrap text {
  font-size: 13px;
  color: var(--f200);
}

.container .main {
  position: relative;
}

.main .cardwrap {
  margin: 40rpx 30rpx;
  padding: 20rpx;
  background-color: var(--background-color);
  border-radius: 8rpx;
}

.cardwrap .cardwrap-item {}

.cardwrap .cardwrap-item:not(:last-of-type) {
  box-shadow: 0 2rpx 0 0 var(--n10);
}

.cardwrap-item .item-lable {
  font-size: 14px;
  color: var(--text-color);
}

.cardwrap-item .item-content {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  font-size: 15px;
  color: var(--g400);
}

.item-content .item-add {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-add .item-times {
  display: flex;
  flex-wrap: wrap;
}

.item-times .item-time {
  width: 200rpx;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  border: 2rpx solid var(--n150);
  border-radius: 6rpx;
}

.item-content image {
  margin-left: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

.input-placeholder {
  font-size: 12px;
  color: var(--n700);
}

.inputicker-placeholder {
  flex: 1;
  font-size: 12px;
  color: var(--n700);
}

.inputicker-placeholder text {
  margin-left: 20rpx;
  color: var(--g400);
}

.cardwrap .cardwrap-items-one {
  display: grid;
  grid-template-columns: 1fr;
}

.cardwrap .cardwrap-items-one:not(:first-of-type) {
  margin-top: 40rpx;
}

.cardwrap .cardwrap-items-one:not(:last-of-type) {
  padding-bottom: 10rpx;
  border-bottom: 2rpx dotted var(--n100);
}

.cardwrap-items-one .items-one-grid {
  grid-template-columns: 1fr;
}

.items-one-grid .items-one-grid-wraps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.items-one-grid-wraps input {
  /* flex: 1; */
}

.items-one-grid text {
  font-size: 14px;
  color: var(--text-color);
}

.items-one-grid .items-three-grid-wraps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.items-three-grid-wraps input:nth-of-type(2n) {
  text-align: center;
}

.items-three-grid-wraps input:nth-of-type(3n) {
  text-align: right;
}


