.theme-loading-wrap {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  height: 100%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.theme-loading-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0px);
  width: 28rpx;
  height: 28rpx;
  background: transparent;
}

.theme-loading-loading .loading {
  width: 100%;
  height: 100%;
  background: transparent;
  border-radius: 100%;
  border-width: 4rpx;
  border-style: solid;
  border-color: var(--background-color) var(--text-color) var(--text-color);
  animation: 0.75s linear 0s infinite normal both running loading;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.message-text {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #293754;
}