/* components/cardWithTitleOrNot/index.wxss */
.cardwithtitleornot {
  position: relative;
  margin: 30rpx 0;
  width: 100%;
  height: 100%;
}

.cardwithtitleornot .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title .main {
  font-size: 19px;
  color: var(--g400);
  font-weight: bold;
}

.title .otherview {
  display: flex;
  align-items: center;
}

.otherview .sub {
  font-size: 15px;
  color: var(--n700);
}

.otherview .othertitleimg {
  width: 28rpx;
  height: 28rpx;
}

.cardwithtitleornot .card {
  margin-top: 20rpx;
}